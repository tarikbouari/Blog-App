<section class="home-ctn">
<div class="left-ctn">
<img src="./images/login.jpg" alt="rss feed" />
</div>

<div class="right-ctn">
<h1 class="text-center">Welcome back</h1>
<span> welcome back! Please enter your details</span>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,  :class => "input",autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, :class => "input", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field4">
    <div>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
      <div>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot password?",  new_password_path(resource_name),  :class => "link-login" %><br />
   <% end %>
    </div>
    
      </div>
    
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", :class => "btn-log" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</section>