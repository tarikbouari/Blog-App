<%= render "nav" %>
<section class="ctn-user-show">
<div class="users">
<div class="user-profile">
    <%= image_tag @user.photo, alt:"{user.name}" %>
</div>
<div class="container-username">
    <h1><%= @user.name %></h1>
    <h3>Number of posts: <%= @user.posts.count%></h3>
</div>
</div>
<div class="ctn-bio">
    <h3> Bio</h3>
    <p> <%= @user.bio %></p>
</div>

<% @user.recent_posts.each do |post| %>
    <div class= "ctn-recent-post">
    <div class="post-item">
        <h3> Post <%= post.id%> </h3>
     </div>
   <div class="post-details">
     <h4><%= post.title%></h4>
     <p> <%= post.text%></p>
   </div>
   <div class="comment-num">
     <span>Comments: <%= post.comments.count %></span>
      <span>Likes: <%= post.likes.count %></span>
   </div>

    </div>
<%end%>

    <div class="buttons">
    <%= link_to  user_posts_path(@user), class: 'self-center' do %>
        <div class="btn">
        <button class ="post-btn">
            See All Posts
        </button>
        </div>
        
     <%end%>   

     <%= link_to new_user_post_path(@user) do %>
        <div class="btn">
        <button class ="post-btn">
            New Post
        </button>
        </div>
        
     <%end%>
   
        <div class="btn">
        <%= button_to "Sign out", destroy_user_session_path, method: :delete, data: {turbo: false}%>
        </div>
        
   
     </div>
</section>