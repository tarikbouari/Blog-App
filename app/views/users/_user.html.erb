
    <% @users.each do |user|%>
        <%= link_to user_path(user) do %>
        <div class="users">
            <div class="user-profile">
                <img class="img" src="<%= user.photo%>" alt=<%= user.name%>>
            </div>
            <div class="container-username">
                <h1><%= user.name %></h1>
                <h3>Number of posts: <%= user.posts.count%></h3>
            </div>
      </div>
      <%end%>
     <%end%>